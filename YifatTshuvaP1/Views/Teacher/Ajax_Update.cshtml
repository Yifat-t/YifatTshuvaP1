@model YifatTshuvaP1.Models.Teacher
@{
    ViewBag.Title = "Ajax_Update";
}

<h1 style="margin-top: 100px; text-align: center; font-size: 20px;">Update Teacher Details @Model.TeacherFname @Model.TeacherLname</h1>

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teachers</a>
    </nav>
</div>

<div style="margin-bottom: 5px; display: inline-block;">
    <label>Enter the Teacher's ID:</label>
    <input type="text" id="teacherId" />
</div>
<button style=""onclick="getTeacher()">Pull Teacher's data</button>


<div style="margin-bottom:5px; margin-top:15px;">
    <label>Enter Teachers's first name:</label>
    <input type="text" id="firstname" />
</div>
<div style="margin-bottom:5px;">
    <label>Enter Teachers's last name:</label>
    <input type="text" id="lastname" />
</div>
<div style="margin-bottom:5px;">
    <label>Enter Teachers's salary:</label>
    <input style="margin-left:24px;" type="number" step="0.01" id="salary" />
</div>

@{
    //UpdateTeacher() is a JS method defined in /Scripts/js-TeacherUpdate.js
}


<button onclick="UpdateTeacher();">Update Teacher</button>
<div id="confirmation" style="display:none; font-size:16px; color:blue;">
    <p>You Updated <span id="FirstName"></span> <span id="LastName"></span> successfully to the system, with salary of $<span id="Salary"> </span>.</p>
</div>

